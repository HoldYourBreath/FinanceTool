{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node", "@playwright/test"],
    "strict": true
  },
  "include": [
    "src",
    "index.html",
    "vite.config.*",
    "eslint.config.*",
    "tailwind.config.*",
    "postcss.config.*",
    "../tests",
    "../tests/**/*.ts",
    "../tests/**/*.tsx",
    "vite-env.d.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "../playwright.config.*",
    "../e2e"
  ]
}
